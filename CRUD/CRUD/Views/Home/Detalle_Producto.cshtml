


@model CRUD.Models.ViewModels.ProductoVM
@{
    ViewData["Title"] = "Detalle_Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@if (Model.oproducto.Id == 0)
{
    <hi>crear empleado</hi>
}
else
{
    <h1>editar producto</h1>
}
<div class=" row">
    <div class=" col-sm-4">
        <form asp-action="Detalle_Producto" asp-controller="Home" method="post">
            <input type="hidden" asp-for="oproducto.Id" />


            <div class=" mb-2">
                <label class=" col-form-label" asp-for="oproducto.Nombre">Nombre Del Producto</label>
                <input class="form-control form-control-sm" asp-for="oproducto.Nombre" type="text" />
            </div>


            <div class=" mb-2">
                <label class=" col-form-label" asp-for="oproducto.Categoria">Nombre Del Producto</label>
                <input class="form-control form-control-sm" asp-for="oproducto.Categoria" type="text" />
            </div>

            <div class=" mb-2">
                <label class=" col-form-label" asp-for="oproducto.Precio">Nombre Del Producto</label>
                <input class="form-control form-control-sm" asp-for="oproducto.Precio" type="text" />
            </div>
            <div class=" mb-2">
                @if (Model.oproducto.Id == 0)
                {
                    <button class=" btn btn-primary btn-sm w-25" type="submit">crear</button>
                }
                else
                {
                    <button class=" btn btn-primary btn-sm w-25" type="submit">actualizar</button>
                }
                <a class=" btn btn-dark btn-sm" asp-action="Index" asp-controller="Home">volver</a>
            </div>
        </form>
    </div>
</div>