@model CRUD.Models.Producto
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<div class=" row">
    <div class=" col-sm-4">
        <form asp-action="Eliminar" asp-controller="Home" method="post">
