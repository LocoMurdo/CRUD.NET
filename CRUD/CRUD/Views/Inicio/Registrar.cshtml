@model CRUD.Models.Usuario;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registrar</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>


    <div class="container mt-5 pt-5">

        <div class=" row justify-content-center">

            <div class=" col-12 col-xl-4 col-md-6">

                <div class="card">
                    <div class=" card-header">
                        REGISTRATE
                    </div>
                    <div class=" card-body">

                        <form asp-controller="Inicio" asp-action="Registrar" method="post">
                            <input class=" form-control mb-3" type="text" placeholder="nombre completo" asp-for="Nombre"  required />
                            <input class=" form-control mb-3" type="text" placeholder="correo" asp-for="Correo" required asp-for="correo" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                            <input class=" form-control mb-3" type="password" placeholder="clave" required asp-for="Clave" />
                            <span asp-validation-for="Clave" class="text-danger"></span>
                            <div class=" d-grid gap-2 mb-3">

                                <button class=" btn btn-primary" type="submit"> Registrate</button>

                            </div>
                            @if (ViewData["mensaje"] != null)
                            {
                                <div class=" form-group">

                                    <div class=" alert">

                                        @ViewData["mensaje"]

                                    </div>

                                </div>
                            }

                            ya tienes una cuenta <a href="@Url.Action("IniciarSesion","Inicio")"> iniciar sesion </a>

                        </form>

                    </div>
                </div>

            </div>

        </div>

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
